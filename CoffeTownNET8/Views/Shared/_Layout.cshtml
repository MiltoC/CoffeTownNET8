<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoffeTown</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap5.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/CoffeTownNET8.styles.css" asp-append-version="true" /> *@

    <!--Css todos-->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.0/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/themes/base/jquery-ui.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.10.5/sweetalert2.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

</head>
<body class="hold-transition layout-top-nav layout-navbar-fixed layout-footer-fixed" style="background-color: #E6CCC8">
    <div class="wrapper">
        <div class="preloader flex-column justify-content-center align-items-center" style="background-color: #2b2b2b">
            <img class="animation__wobble img-circle" src="~/img/Logo_CoffeeTown.png" alt="LogoCoffeTown" height="250" width="250">
        </div>
        <header class="main-header pt-2 px-2" style="background-color: #E6CCC8; border: none !important;">
            <nav class="layout-navbar-fixed navbar navbar-expand-lg p-3" style="background-color: #895D58" data-bs-theme="dark">
                <div class="container-fluid">
                    <a class="mx-3" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/img/Logo_CoffeeTown.png" alt="CoffeTown" height="50" width="50" />
                    </a>
                    <a class="navbar-brand" style="font-size: 30px" asp-area="" asp-controller="Home" asp-action="Index">CoffeTown</a>
                    <div class="separator-vertical mx-3" style="background-color: #fff; width: 2px; height: 25px;"></div>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarColor01">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item dropdown">
                                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                                    <button type="button" class="btn btn-secondary" style="outline: none; box-shadow: 0 0 0 0.1rem black;" onFocus="this.style.boxShadow = '0 0 0 0.2rem black)'">Menú</button>
                                    <div class="btn-group" role="group">
                                        <button id="btnGroupDrop1" type="button" style="outline: none; box-shadow: 0 0 0 0.1rem black;" onFocus="this.style.boxShadow = '0 0 0 0.2rem black)'" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="">
                                            <a class="text-white dropdown-item" asp-area="Admin" asp-controller="Categorias" asp-action="Index">Categorías<i class="mx-2 fas fa-th-large"></i></a>
                                            <div class="dropdown-divider"></div>
                                            <a class="text-white dropdown-item" asp-area="Admin" asp-controller="Categorias" asp-action="Index">Productos<i class="mx-2 nav-icon fas fa-box-open"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                        <form class="d-flex">
                            <input class="form-control me-sm-2"type="search" placeholder="Buscar por categoria..." style="width: 200px">
                            <button class="btn btn-secondary my-2 my-sm-0" type="submit" style="outline: none; box-shadow: 0 0 0 0.1rem black;" onFocus="this.style.boxShadow = '0 0 0 0.2rem black)'">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </button>
                        </form>
                        <div class="separator-vertical mx-3" style="background-color: #fff; width: 2px; height: 25px;"></div>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>
        <div class="container" style="margin-top: 150px;">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="main-footer" style="background-color: #895D58">
            <div class="container" style="color: white">
                &copy; 2024 - CoffeTownNET8 - @ViewData["Title"]
            </div>
        </footer>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!--Js plugins-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.0/js/dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.serializeJSON/3.2.1/jquery.serializejson.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.10.5/sweetalert2.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
