<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoffeTown</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap5.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CoffeTownNET8.styles.css" asp-append-version="true" />
</head>
<body class="hold-transition layout-top-nav layout-navbar-fixed layout-footer-fixed" style="background-color: #E6CCC8">
    <div class="wrapper">
        <div class="preloader flex-column justify-content-center align-items-center" style="background-color: #2b2b2b">
            <img class="animation__shake img-circle" src="~/img/Logo_CoffeeTown.png" alt="LogoCoffeTown" height="250" width="250">
        </div>
        <header class="main-header pt-2 px-2" style="background-color: #E6CCC8; border: none !important;">
            <nav class="layout-navbar-fixed navbar navbar-expand-lg p-3" style="background-color: #895D58" data-bs-theme="dark">
                <div class="container-fluid">
                    <a class="mx-3" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/img/Logo_CoffeeTown.png" alt="CoffeTown" height="50" width="50" />
                    </a>
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CoffeTown</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarColor01">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                                <div class="dropdown-menu">
                                    <a class="text-white dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="text-white dropdown-item" asp-area="" asp-controller="Home" asp-action="Privacy">Home</a>
                                    <div class="dropdown-divider"></div>
                                </div>
                            </li>
                        </ul>
                        <form class="d-flex">
                            <input class="form-control me-sm-2" type="search" placeholder="Search">
                            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                        </form>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>
        <div class="container" style="margin-top: 150px;">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="main-footer" style="background-color: #895D58">
            <div class="container" style="color: white">
                &copy; 2024 - CoffeTownNET8 - @ViewData["Title"]
            </div>
        </footer>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
