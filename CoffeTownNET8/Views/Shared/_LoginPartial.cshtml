@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hola! @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Cerrar sesión</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">

            <button class="btn btn-secondary my-2 my-sm-0" type="button" style="outline: none; box-shadow: 0 0 0 0.1rem black;" onFocus="this.style.boxShadow = '0 0 0 0.2rem black)'">
                <a class="text-white" style="text-decoration: none" asp-area="Identity" asp-page="/Account/Register">Registrase</a>
                <img src="~/img/icons8-registro-48.png" width="20" height="20 alt="Registrarse" />
            </button>
    </li>
    <li class="nav-item">
            <button class="btn btn-secondary my-2 my-sm-0 mx-3" type="submit" style="outline: none; box-shadow: 0 0 0 0.1rem black;" onFocus="this.style.boxShadow = '0 0 0 0.2rem black)'">
                <a class="text-white" style="text-decoration: none" asp-area="Identity" asp-page="/Account/Login">Acceder</a>
                <img src="~/img/icons8-login-48.png" width="20" height="20 alt="Iniciar sesión" />
            </button>
    </li>
}
</ul>
