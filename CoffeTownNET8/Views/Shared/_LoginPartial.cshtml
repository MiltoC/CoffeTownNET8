@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hola! @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Cerrar sesión</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="text-white" style="text-decoration: none" asp-area="Identity" asp-page="/Account/Register">
                <button class="btn btn-secondary my-2 my-sm-0" type="button" style="outline: none; margin-right: 15px; box-shadow: 0 0 0 0.1rem black;" onFocus="this.style.boxShadow = '0 0 0 0.2rem black)'">
                    Registrase
                    <i class="mx-2 fas fa-envelope"></i>
                </button>
            </a>
            
    </li>
    <li class="nav-item">
            <a class="text-white" style="text-decoration: none" asp-area="Identity" asp-page="/Account/Login">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit" style="outline: none; box-shadow: 0 0 0 0.1rem black;" onFocus="this.style.boxShadow = '0 0 0 0.2rem black)'">
                    Acceder
                    <i class="mx-2 fas fa-sign-in-alt"></i>
                </button>
            </a>
    </li>
}
</ul>
