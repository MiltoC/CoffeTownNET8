@{
    ViewData["Title"] = "Lista de Sliders";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h1 class="text-primary">Lista de Sliders</h1>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-secondary" style="outline: none; box-shadow: 0 0 0 0.1rem black;" onFocus="this.style.boxShadow = '0 0 0 0.2rem black)'">Crear nuevo slider<i class="fa-solid fa-plus mx-2"></i></a>
        </div>
    </div>
    <br />
    <table id="tblSliders" class="table table-hover table-striped table-bordered" style="width: 100%; ">
        <thead>
            <tr>
                <th >Id</th>
                <th>Nombre</th>
                <th >Estado</th>
                <th >Imagen</th>
                <th >Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/slider.js"></script>
}